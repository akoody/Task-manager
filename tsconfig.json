{
  "compilerOptions": {
    "target": "es2020",        
    "module": "ESNext",        
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,       
    "noEmit": false,     
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],     
  "exclude": ["node_modules"]
}
